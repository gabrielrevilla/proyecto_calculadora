<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="7dp"/>
            <solid android:color="@color/btnCalcMemoria"/>
            <stroke android:color="@color/btnCalcMemoriaBorder" android:width="5dp"/>
            <gradient android:angle="270" android:startColor="@color/btnCalcMemoria" android:endColor="@color/btnCalcMemoriaEnd"/>
        </shape>
    </item>

    <item android:state_hovered="true" >
        <shape android:shape="rectangle">
            <corners android:radius="7dp"/>
            <solid android:color="@color/btnHoveredCalcMemoria"/>
            <stroke android:color="@color/btnHoveredCalcMemoriaBorder" android:width="5dp"/>
            <gradient android:angle="270" android:startColor="@color/btnHoveredCalcMemoria" android:endColor="@color/btnHoveredCalcMemoriaEnd"/>
        </shape>
    </item>

</selector>