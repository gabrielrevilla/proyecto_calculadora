<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="calcBtnMemoria">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/botones_calculadora_memoria_style</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="calcBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/botones_calculadora_style</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="inDispNumeros">
        <item name="android:background">@drawable/in_display_numeros</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="bgBotonesCalc">
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/bg_botones</item>
    </style>

</resources>
